{
  "name": "privateer-capital-server",
  "version": "1.0.0",
  "description": "Trading bot server for Privateer Capital",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test-api": "ts-node src/scripts/testApi.ts",
    "test-price-data": "ts-node src/scripts/testPriceData.ts",
    "test-trading": "ts-node src/scripts/testTrading.ts",
    "test-strategy": "ts-node src/scripts/runFullStrategy.ts",
    "test-multi-asset": "ts-node src/scripts/testMultiAsset.ts",
    "test-all": "npm run test-api && npm run test-price-data && npm run test-trading && npm run test-strategy",
    "test-whitelist": "ts-node src/scripts/testWhitelist.ts",
    "test-correlation": "ts-node src/scripts/testCorrelationAnalysis.ts",
    "test-asset-formatting": "ts-node src/scripts/testAssetFormatting.ts",
    "check-wallet": "ts-node src/scripts/checkWallet.ts",
    "validate-mappings": "ts-node src/scripts/validateAssetMappings.ts",
    "fix-positions": "ts-node src/scripts/fixImbalancedPositions.ts",
    "fix-positions-force": "ts-node src/scripts/fixImbalancedPositions.ts --force",
    "sync-positions": "ts-node src/scripts/synchronizePositions.ts",
    "setup-sync-scheduler": "./setup-sync-scheduler.sh",
    "debug:env": "ts-node src/debug/print-environment.ts",
    "debug:direct-api": "ts-node src/debug/test-direct-api.ts",
    "debug:credentials": "ts-node src/debug/test-credentials.ts",
    "debug:cloud-api": "ts-node src/debug/test-cloud-api.ts",
    "debug:compare": "ts-node src/debug/compare-local-cloud.ts",
    "debug:hyperliquid": "ts-node src/debug/test-hyperliquid-api.ts",
    "debug:cloud-sync": "curl -X POST https://privateer-trading-bot-542222496850.us-central1.run.app/sync/sync-positions",
    "debug:all": "chmod +x src/debug/run-all-tests.sh && src/debug/run-all-tests.sh"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "axios-rate-limit": "^1.4.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "hyperliquid": "^1.7.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.20",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
